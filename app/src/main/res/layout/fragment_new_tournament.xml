<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.NewTournamentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newTournamentConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDark">

        <TextView
            android:id="@+id/newTournamentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:fontFamily="@font/roboto_black"
            android:text="NEW TOURNAMENT"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/subtitle_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:paddingBottom="@dimen/large_margin"
            app:layout_constraintBottom_toTopOf="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newTournamentTextView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/enterTournamentNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Tournament Name"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterImageEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Upload Image"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterTournamentCityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Tournament City"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterStartDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Start Date (dd-mm-yyyy)"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterEndDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="End Date (dd-mm-yyyy)"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterContactEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Contact E-mail"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterContactPhoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Contact Phone"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterTeamNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Number of Teams"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterTournamentTypeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Select Brackets, League or Mix"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

                <EditText
                    android:id="@+id/enterSelectTeamsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/large_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/edit_text_border"
                    android:fontFamily="@font/roboto"
                    android:hint="Select Teams"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textColorHint="@color/colorLight"
                    android:textSize="@dimen/medium_size" />

            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginStart="@dimen/big_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/Button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/big_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>